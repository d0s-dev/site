---
interface Feature {
  title: string;
  description: string;
  badge: string;
}

const { features } = Astro.props as { features: Feature[] };
---
<section class="relative px-4 py-24 md:px-8">
  <div class="mx-auto max-w-6xl">
    <div class="mb-12 text-center">
      <h2 class="text-3xl font-semibold text-white sm:text-4xl">Why Choose <span class="gradient-text">d0s</span>?</h2>
      <p class="mt-4 text-lg text-[#979DAC]">Secure, lightweight, and blazing fast deployments.</p>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {features.map((feature) => (
        <article class="group relative overflow-hidden rounded-xl border border-[#002855] bg-[#0A1A33]/80 p-6 backdrop-blur">
          <div class="flex size-12 items-center justify-center rounded-full bg-[#023E7D]/60 text-2xl">{feature.badge}</div>
          <h3 class="mt-6 text-xl font-semibold text-white">{feature.title}</h3>
          <p class="mt-3 text-sm text-[#AAB6C8]">{feature.description}</p>
          <div class="absolute inset-0 -z-10 opacity-0 transition-opacity duration-300 group-hover:opacity-100" style="background: linear-gradient(135deg, rgba(4,102,200,0.12) 0%, rgba(2,62,125,0.12) 100%);"></div>
        </article>
      ))}
    </div>
  </div>
</section>
