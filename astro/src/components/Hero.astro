---
// Hero section with large ASCII logo
const asciiLogoUpper = `███████▄    ▄█████▄   ▄███████▄
███   ███  ███   ███  ███   ▀██
███   ███  ███   ███  ███
███   ███  ███   ███  ███▄▄▄▄▄
███   ███  ███   ███   ▀▀▀▀▀███
███   ███  ███   ███        ███
███   ███  ███   ███  ██▄   ███
███████▀    ▀█████▀   ▀███████▀`;
---
<section class="relative flex min-h-[90vh] items-center overflow-hidden px-4 py-16 md:px-8">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_50%,_color-mix(in_srgb,var(--blue-100)_22%,_transparent)_0%,_transparent_58%)]"></div>
    <div class="animate-pulse-slow absolute -top-32 right-[-20%] size-[480px] rounded-full bg-brand-blue-500/20 blur-3xl"></div>
  </div>
  
  <div class="relative z-10 mx-auto max-w-7xl text-center">
    <div class="space-y-8">
      <div class="ascii-logo-wrapper mx-auto">
        <pre class="ascii-logo text-brand-blue-100" style="font-size: clamp(0.8rem, 4vw, 2rem); line-height: 1.2; font-family: 'JetBrains Mono', monospace; font-weight: 600;">{asciiLogoUpper}</pre>
      </div>
      
      <h1 class="text-3xl font-bold text-white sm:text-4xl lg:text-5xl" style="font-family: 'JetBrains Mono', monospace;">
        Deploy Secure Anywhere
      </h1>
      
      <div class="flex flex-wrap justify-center gap-4 pt-4 pb-0">
        <a
          class="group relative inline-flex items-center gap-2 rounded-md bg-gradient-to-r from-brand-blue-100 via-brand-blue-200 to-brand-blue-300 px-8 py-4 text-lg font-semibold text-white shadow-[0_25px_80px_rgba(3,83,164,0.35)] transition-transform hover:-translate-y-1"
          href="/docs/cli"
        >
          <span class="relative">Quickstart</span>
        </a>
        <a
          class="inline-flex items-center gap-2 rounded-md border border-brand-blue-200 px-8 py-4 text-lg font-semibold text-brand-blue-100 transition hover:bg-brand-blue-200 hover:text-white"
          href="/catalog"
        >
          Browse the Catalog
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-pulse-slow {
    animation: pulseSlow 6s ease-in-out infinite;
  }

  @keyframes pulseSlow {
    0%,
    100% {
      transform: scale(0.95);
      opacity: 0.5;
    }

    50% {
      transform: scale(1.05);
      opacity: 1;
    }
  }

  .ascii-logo {
    display: inline-block;
    text-align: left;
  }
</style>
